@model OnlineShopping.DataAccess.Models.NotificationSetting

<style>

    a {
        font-size: 12px;
        color: #1a9cb7;
        text-decoration: none;
    }

    h3 {
        font-size: 22px;
        color: #424242;
        font-weight: 400;
    }

    .container {
        padding-left: 5rem;
        padding-right: 5rem;
        padding-top: 1rem;
        padding-bottom: 1rem;
    }
</style>
<body class="bg-light">
    <div class="container ">
        <div class="row">
            <div class="col-sm-6"><h3>Add Product</h3></div>
        </div>
        <div class="row p-100 bg-white pb-5">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-6">
                        <label>@Html.LabelFor(model => model.UserId)</label><br />
                        @Html.TextBox("EmployeeName", null, new { @style = "width:100%;", @class = "form-control", @placeholder = "Please enter  ProductName" })
                    </div>
                    <div class="col-sm-6">
                        <label>@Html.LabelFor(model => model.TypeId)</label><br />
                        @Html.TextBox("Email", null, new { @style = "width:100%;", @class = "form-control", @placeholder = "Please enter your product description" })
                    </div>
                </div>
                <div class="row pb-2">
                    <div class="col-sm-6">
                        <label>@Html.Label("Is Enable")</label><br />
                        @Html.CheckBox("IsEnable")
                    </div>
                </div>

                <div class="row pb-2">
                    <div class="col-sm-6">
                        <button class="btn  btn-lg" value="save" style="background-color:#f85606;width:100%;color:white;">Save</button>
                    </div>
                </div>

            </div>

        </div>
    </div>
</body>