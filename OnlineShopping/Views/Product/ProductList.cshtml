@model IEnumerable<Product>

@* <!DOCTYPE html>
<html>
<head> *@
   @*  <link rel="stylesheet" href="~/css/site.css" /> *@
    <style>
        .card
        {
            border: 1px solid #ddd;
            border-radius: 0.4rem;
            overflow: hidden;
            width: 174px;
            height: 323px;
        }
        .card-img-top {
            width: 100%;
            height:150px;
        }
        .card-body {
         /*    padding: 1rem; */
        }
        .card-title 
        {
            font-size: 1.25rem;
            margin-bottom: 0.75rem;
        }
        .card-text {
            font-size: 1rem;
            margin-bottom: 1rem;
        }



        .product-card {
            width: 250px;
            /* padding: 15px; */
            border: 1px solid #ddd;
            border-radius: 5px;
          /*   margin: 10px; */
            text-align: left;
       
        }

        .product-image img {
            width: 100%;
            height: auto;
           /*  object-fit: cover; */
          
        }

        .product-name {
            font-size: 16px;
            font-weight: bold;
           /*  margin: 10px 0; */
        }

        .product-price {
            font-size: 18px;
            color: #ff5722;
        }

        .discount {
            color: #757575;
            font-size: 14px;
        }

        .product-rating {
            margin-top: 10px;
            color: #ffc107;
        }

        .stars i {
            margin-right: 2px;
        }

        .review-count {
            font-size: 14px;
            color: #757575;
        }
    </style>



@foreach (var product in Model)
{

<div class="product-card" >
    <div class="product-image" >
        <img src="~/Images/@product.ImageUrl" alt="@product.Name" class="img-fluid" />
    </div>
    <div class="product-details">
        <h4 class="product-name">@product.Name</h4>
        <div class="product-price">
            <span class="price">Rs.@product.Price</span>
          @*   <span class="discount">-@product.Discount% Off</span> *@
        </div>
        <div class="product-rating">
           @*  <span class="stars">
                @for (int i = 0; i < product.Rating; i++)
                {
                    <i class="fas fa-star"></i>
                }
            </span> *@
          @*   <span class="review-count">(@product.ReviewCount)</span> *@

                <a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@product.Id" class="btn btn-primary">View Details</a>
        </div>
    </div>
</div>
}