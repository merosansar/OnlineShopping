@model IEnumerable<OnlineShopping.DataAccess.Models.SubCategory>
<div class="d-flex justify-content-center align-items-center vh-80 bg-light ">
    <div class="w-75 p-4 bg-white rounded shadow mt-5 mb-5 ">
        <p class="text-end">

            <a asp-action="Create" data-bs-toggle="tooltip" data-bs-placement="top" title="Create">  <i class="fas fa-plus text-primary"></i><span class="CreateLink"> Create </span> </a>

        </p>
        <table class="table ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
              
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
