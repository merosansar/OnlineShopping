@model OnlineShopping.DataAccess.Repository.TblCategory
<style>

    a {
        font-size: 12px;
        color: #1a9cb7;
        text-decoration: none;
    }

    h3 {
        font-size: 22px;
        color: #424242;
        font-weight: 400;
    }

    .container {
        padding-left: 5rem;
        padding-right: 5rem;
        padding-top: 1rem;
        padding-bottom: 1rem;
    }

    .alert-custom {
        position: fixed;
        top: 1em;
        right: 1em;
        display: flex;
        align-items: center;
        display: none;
    }

    @@keyframes slide-in-right {
        from {
            opacity: 0;
            transform: translateX(100%);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes slide-out-right {
        from {
            opacity: 1;
            transform: translateX(0);
        }

        to {
            opacity: 0;
            transform: translateX(100%);
        }
    }

    .slide-in-right {
        animation: slide-in-right 0.5s forwards;
    }

    .slide-out-right {
        animation: slide-out-right 0.5s forwards;
    }

    .alert-custom .bi-check-circle {
        font-size: 1em;
        margin-right: 0.5em;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">




<body class="bg-light">
    @using (Html.BeginForm("Edit", "Category", FormMethod.Post))
    {

        <div class="container ">
            <div class="row">
                <div class="colsm-6"></div>
                <div id="customAlert" class="alert alert-success alert-custom col-sm-6" role="alert">
                    <i class="bi bi-check-circle"></i>
                    @ViewBag.Message
                </div>
            </div>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script>
                $(document).ready(function () {
                    var m = '@ViewBag.Message';
                    console.log(m);

                    if (m != "" && m != '' && m != null) {

                        showSuccessAlert();
                    }

                    function showSuccessAlert() {
                        debugger;
                        const alert = $('#customAlert');
                        alert.show().addClass('slide-in-right');

                        setTimeout(function () {
                            alert.addClass('slide-out-right');
                            setTimeout(function () {
                                alert.removeClass('slide-in-right slide-out-right').hide();
                            }, 500); // Wait for the slide-out animation to complete before hiding
                        }, 5000); // Auto-hide after 5 seconds
                    }
                });
            </script>
            <div class="row">
                <div class="col-sm-12 text-center"><h3>Add Category</h3></div>
            </div>
            <div class="row p-100 bg-white pb-5">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6">
                            <label>@Html.LabelFor(model => model.Name)</label>
                            @Html.TextBoxFor(model => model.Name, null, new { @style = "width:100%;", @class = "form-control", @placeholder = "CategoryName" })
                        </div>
                        <div class="col-sm-6">
                            <label>@Html.LabelFor(model => model.Description)</label>
                            @Html.TextBoxFor(model => model.Description, null, new { @style = "width:100%;", @class = "form-control", @placeholder = "Description" })
                        </div>
                    </div>
                    <div class="row pb-2  pt-2 ">
                        <div class="col-sm-6">
                            <button class="btn btn-lg " type="submit" value="save" style="background-color:#f85606;width:100%;color:white;" data-bs-dismiss="alert" aria-label="Close">Update</button>
                        </div>
                        <div class="col-sm-2">
                          
                                <button class="btn-primary btn-lg " type="submit" value="Back to List">
                                <a asp-action="Index" class="text-white text-decoration-none fs-6">Back to List</a>
                              

                            </button>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>   
    }

</body>


